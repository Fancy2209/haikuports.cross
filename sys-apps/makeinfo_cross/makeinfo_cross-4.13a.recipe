SUMMARY="Standard GNU documentation format tool" 
DESCRIPTION="Texinfo is the official documentation format of the GNU project." 
HOMEPAGE="http://www.gnu.org/software/texinfo/" 
LICENSE="GNU GPL v3"
COPYRIGHT="1992-2008 Free Software Foundation, Inc."
SRC_URI="http://ftp.gnu.org/gnu/texinfo/texinfo-4.13a.tar.gz"
CHECKSUM_MD5="71ba711519209b5fb583fed2b3d86fcb"
REVISION="1"
ARCHITECTURES="x86_gcc2 ?x86"

PROVIDES="makeinfo_cross = $portVersion compat >= 4.13
	cmd:makeinfo = $portVersion compat >= 4.13
	"
BUILD_REQUIRES="
	binutils_cross_$targetArchitecture
	gcc_cross_$targetArchitecture
	"
BUILD_PREREQUIRES="haiku_devel >= $haikuVersion
	cmd:libtoolize
	cmd:make
	cmd:sed
	"

SOURCE_DIR="texinfo-4.13"

BUILD()
{
	libtoolize --force --copy --install
	tools_only=1 runConfigure ./configure \
		--build=$buildMachineTriple --host=$targetMachineTriple \
		--disable-nls --disable-rpath
	make AR=${targetMachineTriple}-ar
}

INSTALL()
{
	cd makeinfo
	make install
	
	$targetMachineTriple-strip $prefix/bin/makeinfo
}
