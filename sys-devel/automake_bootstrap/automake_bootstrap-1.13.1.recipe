SUMMARY="A tool for generating 'Makefile.in' from 'Makefile.am'"
DESCRIPTION="
	Automake is a tool for automatically generating 'Makefile.in' files
	from 'Makefile.am' files.  'Makefile.am' is a series of 'make' macro
	definitions (with rules occasionally thrown in).  The generated
	'Makefile.in' files are compatible with the GNU Makefile standards.
	"
HOMEPAGE="http://www.gnu.org/software/automake/"
COPYRIGHT="2013 Free Software Foundation, Inc."
LICENSE="GNU GPL v2"
SRC_URI="http://ftp.gnu.org/gnu/automake/automake-1.13.1.tar.gz"
CHECKSUM_MD5="78a0ef8216b0556b44508e7b5b0c0847"
REVISION="1"
ARCHITECTURES="x86_gcc2 x86"

PATCHES="automake_bootstrap-1.13.1.patchset"

PROVIDES="
	automake_bootstrap = $portVersion compat >= 1.13
	automake = $portVersion compat >= 1.13
	cmd:automake = $portVersion compat >= 1.13
	cmd:automake_1.13 = $portVersion compat >= 1.13
	cmd:aclocal = $portVersion compat >= 1.13
	cmd:aclocal_1.13 = $portVersion compat >= 1.13
	"
REQUIRES="
	haiku >= $haikuVersion
	cmd:awk
	coreutils
	diffutils
	cmd:m4 >= 1.4
	cmd:perl >= 5.8
	cmd:sh
	"
BUILD_REQUIRES="
	"
BUILD_PREREQUIRES="
	haiku_devel >= $haikuVersion
	binutils_cross_$targetArchitecture
	gcc_cross_$targetArchitecture
	cmd:autoconf >= 2.60
	cmd:make
	cmd:makeinfo
	cmd:perl >= 5.8
	cmd:sed
    "

SOURCE_DIR="automake-$portVersion"

BUILD()
{
	# The build system unfortunately uses the PERL we specify on the build host
	# and also hard-codes it into the files installed on the target. We solve
	# the dilemma by specifying the build platform's perl path here and replace
	# it in the files we install later. This might still cause problems, since
	# configure also analyzes the perl we specify and infers build properties
	# (availability of threads), which may not match the situation on the
	# target platform.
	perl=$(which perl)
	PERL="$perl" runConfigure ./configure \
		--build=$buildMachineTriple --host=$targetMachineTriple
	make $jobArgs
}

INSTALL()
{
	make DESTDIR=$installDestDir install

	rm -rf $installDestDir$infoDir

	# fix perl references
	perl=$(which perl)
	sed -i -e "s,$perl,/bin/env perl,g" \
		$installDestDir$binDir/*
}
